<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %MDC %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.avioconsulting.mule.opentelemetry.internal.anypoint.clients.AMCApplicationManagerApi" level="INFO"/>
        <Logger name="io.opentelemetry" level="INFO"/>
        <Logger name="com.avioconsulting.mule.opentelemetry" level="INFO"/>
        <Logger name="org.mule.service.http.impl.service.HttpMessageLogger" level="INFO"/>
        <Logger name="com.avioconsulting.mule.opentelemetry" level="INFO"/>
        <Logger name="org.mule.runtime.core" level="WARN"/>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>